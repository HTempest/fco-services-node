<main id="content" role="main" class="group">

  <header class="page-header group">
    <div>
      <h1><%= transaction.title %></h1>
    </div>
  </header>
  <div class="article-container group">
    <article role="article" class="group">
      <div class="inner">

        <%- partial("partials/transactions/" + transaction.slug + "/_confirm", { calculation: calculation }) %>

        <form action="<%= epdqRequest.requestUrl() %>" method="post" class="epdq-submit">
        <% var formAttrs =  epdqRequest.formAttributes(); %>
        <% for(var key in formAttrs){ %>
          <input type="hidden" name="<%= key %>" value="<%= formAttrs[key] %>" />
        <% } %>

        <p id="get-started" class="get-started group">
          <button class="button" type="submit">Pay</button>
          <span class="destination"> on Barclaycard</span>
        </p>
      </div>
    </article>
  </div>

</main>
